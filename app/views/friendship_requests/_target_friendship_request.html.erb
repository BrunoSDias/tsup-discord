<div id="<%= dom_id friendship_request %>">
  <div class='d-flex friendship_request__item w-100 justify-content-between'>
    <div class='d-flex'>
      <% if friendship_request.target.avatar.attached? %>
        <%= image_tag friendship_request.target.avatar, class: 'rounded-image', width: 40, height: 40 %>
      <% else %>
        <i class="bi bi-person-check" style='font-size: 28px; margin-right: 10px;'></i>
      <% end %>
      <div>
        <p class="m-0"><%= friendship_request.target.name %></p>
        <small>Pedido de amizade recebido!</small>
      </div>
    </div>
    <div class='d-flex'>
      <%= button_to accept_friendship_request_path(friendship_request), class: 'rounded' do %>
        <i class="bi bi-check"></i>
      <% end %>
      <%= button_to friendship_request_path(friendship_request), method: :delete, class: 'rounded' do %>
        x    
      <% end %>
    </div>
  </div>
</div>
